<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/_16adp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/itemCountTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/item_count"
        android:textSize="@dimen/_18asp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/topCharactersTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8adp"
        android:text="@string/top_characters"
        android:textSize="@dimen/_16asp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/itemCountTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>